@model IEnumerable<BooklistLib.Models.BookListModel>

@{
    ViewData["Title"] = "Details";
}

<h1>List</h1>

<p>
    <a asp-action="CreateBookList">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Book" asp-route-id="@item.BookId" class="btn btn-secondary" role="button">Details</a> |
                    <a asp-action="DeleteBook" asp-controller="List"  asp-route-id="@item.BookId" class="btn btn-secondary" role="button">Delete</a>
                </td>
            </tr>

        }
        <tr>
            <td>
                <a asp-controller="List" asp-action="Edit" class="btn btn-secondary" role="button">Edit list</a>
            </td>
        </tr>
    </tbody>
</table>
