@model IEnumerable<BooklistLib.Models.ListModel>;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model)
            {
                <tr>
                    <td>@list.Name</td>
                    <td class="btn-group">
                        <a asp-controller="List" asp-action="Details" asp-route-id="@list.Id" class="btn btn-secondary" role="button">Details</a>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a asp-controller="List" asp-action="CreateList" class="btn btn-secondary" role="button">Add list</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
